# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pairflix

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Settings (SMTP)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@pairflix.com
SMTP_PASSWORD=your_secure_smtp_password_here
EMAIL_SENDER=notifications@pairflix.com
EMAIL_SENDER_NAME=PairFlix Notifications

# Feature Flags
MAINTENANCE_MODE=false
ENABLE_MATCHING=true