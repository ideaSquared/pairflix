{
	"name": "pairflix-backend",
	"version": "1.0.0",
	"description": "Backend for PairFlix app",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "cross-env NODE_ENV=development ts-node-dev --poll --respawn src/index.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/ --ext .ts",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"format": "prettier --write \"src/**/*.{ts,js,json}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json}\""
	},
	"dependencies": {
		"@types/sequelize": "^4.28.20",
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.0",
		"node-cron": "^4.0.5",
		"pg": "^8.11.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.37.7",
		"sequelize-cli": "^6.6.2"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.1",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^20.1.0",
		"@types/node-cron": "^3.0.11",
		"@types/pg": "^8.6.6",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.4.0",
		"jest": "^29.5.0",
		"prettier": "^3.5.3",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.0.4"
	}
}
